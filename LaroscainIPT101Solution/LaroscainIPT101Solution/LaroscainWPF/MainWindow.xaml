<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="SignupWPFApp.MainWindow"
        Title="Sign Up Form"
        Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#f0f4f8">

    <Grid>
        <Border CornerRadius="10" Background="White" Padding="20" Margin="40" BorderBrush="#cccccc" BorderThickness="1">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Sign Up" FontSize="28" FontWeight="Bold" Foreground="#0078D7" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Username:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername" Height="30" Margin="0,0,0,10" Padding="5"/>

                <TextBlock Text="Email:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" Height="30" Margin="0,0,0,10" Padding="5"/>

                <TextBlock Text="Password:" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" Height="30" Margin="0,0,0,20" Padding="5"/>

                <Button Content="Sign Up"
                        Height="40"
                        Background="#0078D7"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="SignUp_Click"/>

                <TextBlock x:Name="lblMessage"
                           Foreground="Green"
                           FontWeight="Bold"
                           Margin="0,20,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

